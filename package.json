{
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "allure-playwright": "^3.4.5",
    "playwright-bdd": "^8.4.2"
  },
  "scripts": {
    "test:headless": "npx bddgen test && npx playwright test",
    "test": "npx bddgen test && npx playwright test --headed",
    "test:tag": "npm run test -- --grep",
    "rebuild": "rm -rf node_modules && rm -rf package-lock.json && npm install",
    "on:chrome": "npm run test -- --project=chromium",
    "on:firefox": "npm run test -- --project=firefox",
    "on:webkit": "npm run test -- --project=webkit",
    "on:chrome:tag": "npm run test -- --project=chromium --grep",
    "on:firefox:tag": "npm run test -- --project=firefox --grep",
    "on:webkit:tag": "npm run test -- --project=webkit --grep",
    "on:all": "npm run test -- --project=chromium --project=firefox --project=webkit",
    "on:all:tag": "npm run test -- --project=chromium --project=firefox --project=webkit --grep"
  },
  "dependencies": {
    "@allurereport/plugin-awesome": "^3.0.1",
    "allure-js-commons": "^3.4.5"
  }
}
